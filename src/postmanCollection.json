{
  "info": {
    "name": "EDS Config Service - Site Config CRUD",
    "description": "Postman collection for create/view/update/delete site config endpoints (generated by edsconfigserviceserver)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://admin.hlx.page"
    },
    {
      "key": "org",
      "value": "adobe"
    },
    {
      "key": "site",
      "value": "blog"
    },
    {
      "key": "apiKey",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Get Site Config",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "token {{apiKey}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/config/{{org}}/sites/{{site}}.json",
          "host": ["{{baseUrl}}"],
          "path": ["config", "{{org}}", "sites", "{{site}}.json"]
        }
      }
    },
    {
      "name": "Update Site Config (POST)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "token {{apiKey}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated from Postman\",\n  \"description\": \"Example update\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/config/{{org}}/sites/{{site}}.json",
          "host": ["{{baseUrl}}"],
          "path": ["config", "{{org}}", "sites", "{{site}}.json"]
        }
      }
    },
    {
      "name": "Create Site Config (PUT)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "token {{apiKey}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"version\": 1,\n  \"created\": \"2025-01-01T00:00:00Z\",\n  \"lastModified\": \"2025-01-01T00:00:00Z\",\n  \"content\": { \"contentBusId\": \"my-bus\", \"source\": { \"type\": \"markup\", \"url\": \"https://example.com\" } }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/config/{{org}}/sites/{{site}}.json",
          "host": ["{{baseUrl}}"],
          "path": ["config", "{{org}}", "sites", "{{site}}.json"]
        }
      }
    },
    {
      "name": "Delete Site Config",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "token {{apiKey}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/config/{{org}}/sites/{{site}}.json",
          "host": ["{{baseUrl}}"],
          "path": ["config", "{{org}}", "sites", "{{site}}.json"]
        }
      }
    }
  ]
}